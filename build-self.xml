<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="ise3_contentBuild" default="all">
    <description>
        Builds schemas and tools for the ISE3 platform
    </description>

    <taskdef name="schematron" classname="com.schematron.ant.SchematronTask"/>
    
    <import file="anttask/filesets.xml"/>

    <target name="all" depends="codestyle"/>
    
    <target name="codestyle">
        <schematron
            schema="codestyle/indentation.sch"
            queryLanguageBinding="xslt2"
            diagnose="yes"
            failOnError="true">
            <fileset refid="xml"/>
        </schematron>
    </target>
    
</project>
